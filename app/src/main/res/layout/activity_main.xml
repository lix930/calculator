<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.calculator.MainActivity">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="娘娘计算器"
    android:textSize="20sp"

    />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:id="@+id/et_input"
        android:inputType="none"
        android:background="@drawable/white_bg"
        android:gravity="end|bottom"
        android:layout_marginTop="30sp"
        android:textColor="@color/black"
        android:textSize="40sp"/>
    <LinearLayout
        android:id="@+id/firstlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/et_input"
        >
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="30sp"
            android:text="C"
            android:id="@+id/btn_clear"
            android:gravity="end|bottom"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="30sp"
            android:text="DEL"
            android:id="@+id/btn_del"
            android:gravity="end|bottom"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="30sp"
            android:text="÷"
            android:id="@+id/btn_divide"
            android:gravity="end|bottom"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="30sp"
            android:text="×"
            android:id="@+id/btn_multiply"
            android:gravity="end|bottom"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/secondlayout"
        android:layout_below="@id/firstlayout"
        >
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="30sp"
            android:text="7"
            android:id="@+id/btn_7"
            android:gravity="end|bottom"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="30sp"
            android:text="8"
            android:id="@+id/btn_8"
            android:gravity="end|bottom"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="30sp"
            android:text="9"
            android:id="@+id/btn_9"
            android:gravity="end|bottom"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="30sp"
            android:text="-"
            android:id="@+id/btn_subtract"
            android:gravity="end|bottom"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/thirdlayout"
        android:layout_below="@id/secondlayout"
        >
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="30sp"
            android:text="4"
            android:id="@+id/btn_4"
            android:gravity="end|bottom"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="30sp"
            android:text="5"
            android:id="@+id/btn_5"
            android:gravity="end|bottom"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="30sp"
            android:text="6"
            android:id="@+id/btn_6"
            android:gravity="end|bottom"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="30sp"
            android:text="+"
            android:id="@+id/btn_plus"
            android:gravity="end|bottom"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/thirdlayout"
        android:orientation="vertical"
        android:id="@+id/bigforthlayout"
        android:layout_alignLeft="@id/thirdlayout"
        android:layout_alignStart="@id/thirdlayout"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forthlayout"
            android:layout_below="@id/thirdlayout"
            android:gravity="center_horizontal">
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="30sp"
                android:text="1"
                android:id="@+id/btn_1"
                android:gravity="end|bottom"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="30sp"
                android:text="2"
                android:id="@+id/btn_2"
                android:gravity="end|bottom"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="30sp"
                android:text="3"
                android:id="@+id/btn_3"
                android:gravity="end|bottom"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        <Button
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:textSize="30sp"
            android:text="0"
            android:id="@+id/btn_0"
            android:gravity="end|bottom"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="30sp"
                android:text="."
                android:id="@+id/btn_dot"
                android:gravity="end|bottom"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/bigforthlayout"
        android:layout_toEndOf="@id/bigforthlayout"
        android:layout_below="@id/thirdlayout"
        >
        <Button
            android:layout_width="80dp"
            android:layout_height="160dp"
            android:textSize="30sp"
            android:text="="
            android:id="@+id/btn_equal"
            android:gravity="end|bottom"
            />
    </LinearLayout>


</RelativeLayout>
